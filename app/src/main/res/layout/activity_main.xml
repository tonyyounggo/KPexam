<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.ziinc.kpexam.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageButton
        android:id="@+id/imageButton18"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="26dp"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/fb"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@android:color/background_dark"
        android:scaleType="fitXY"
        android:src="@drawable/logokp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Contact"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/imageButton18"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="123dp"
        android:layout_height="270dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="136dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.444"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="188dp"
        android:layout_height="348dp"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="234dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="北北基宜"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/tpBtn"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:onClick="onClick1"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/legoc" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="桃園市"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/tyBtn"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:onClick="onClick2"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/bc"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="309dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新竹市"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/hsincityBtn"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:onClick="onClick3"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/cc"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="71dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新竹縣"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/hsinty02Btn"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:layout_weight="0.08"
            android:background="@android:color/transparent"
            android:onClick="onClick4"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/rr" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
